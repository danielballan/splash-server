{
  "definitions": {
      "authenticator": {
        "type": "object",
        "required": ["issuer", "subject"],
        "properties": { 
          "issuer":{
            "type": "string",
            "description": "name of the issuer"
          },
          "subject": {
            "type": "string",
            "description": "unique subject id"
          }
        }
      }
    },
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "splash_schema_user",
    "type": "object",
    "title": "User Schema",
    "properties": {
      "uid": {
        "description": "unique identifier",
        "type": "string"
      },
      "name": {
        "description": "User display name",
        "type": "string"
      },
      "groups": {
        "description": "uids of groups that the user belongs to",
        "type": "array",
        "items": {
          "type": "string"
        },
        "minItems": 1,
        "uniqueItems": true
      },
      "authenticators":{
        "type": "array",
        "items": {"$ref": "#/definitions/authenticator"}
      }

    },
    "required": ["name"]
  }